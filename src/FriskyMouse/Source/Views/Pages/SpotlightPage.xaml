<Page
    x:Class="FriskyMouse.Views.Pages.SpotlightPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FriskyMouse.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Mouse Spotlight Page"
    d:DataContext="{d:DesignInstance local:SpotlightPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="{StaticResource MainContainerMargin}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
            <Grid>
                <!--<TextBlock FontSize="{StaticResource PageHeaderFontSize}"
                       FontWeight="Normal"
                       Text="Mouse Highlighter Settings" />-->
                <ui:ToggleSwitch
                    x:Name="tglSpotlight"
                    Grid.Column="0"
                    Content="Enable/Disable Spotlight"
                    IsChecked="{Binding ViewModel.IsMouseSpotlightEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <!--<ui:Button Grid.Column="0"
                           Command="{Binding ViewModel.CounterIncrementCommand, Mode=OneWay}"
                           Content="Click me!"
                           Icon="Fluent24" />-->
            </Grid>
            <Separator Margin="0,5,0,0" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Radius" />
                <Slider
                    x:Name="sldSpotlightRadius"
                    Grid.Column="1"
                    Width="300"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding ViewModel.SpotlightRadius, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
            <ui:ToggleSwitch
                x:Name="tglFilledSpotlight"
                Grid.Column="0"
                Content="Filled Spotlight"
                IsChecked="{Binding ViewModel.IsSpotlightFilled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <ComboBox
                MinWidth="200"
                Margin="0,20,0,0"
                HorizontalAlignment="Left"
                SelectedIndex="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontFamily="{Binding}" Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Opacity" />
                <Slider
                    x:Name="sldSpotlightOpacity"
                    Grid.Column="1"
                    Width="300"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    AutoToolTipPlacement="TopLeft"
                    Maximum="100"
                    Minimum="0"
                    Value="{Binding ViewModel.SpotlightOpacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </StackPanel>
    </Grid>
</Page>

