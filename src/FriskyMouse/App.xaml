<Application
    x:Class="FriskyMouse.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="clr-namespace:FriskyMouse.Helpers"
    xmlns:local="clr-namespace:FriskyMouse"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />                                
                <ResourceDictionary Source="Source/Controls/TypographyControl.xaml" />
                <ResourceDictionary Source="Source/Controls/PageControlDocumentation.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
