<Application
    x:Class="FriskyMouse.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="clr-namespace:FriskyMouse.Helpers"
    xmlns:local="clr-namespace:FriskyMouse"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    ShutdownMode="OnMainWindowClose"
    Startup="OnApplication_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="pack://application:,,,/Source/Resources/LayoutVariables.xaml" />
                <ResourceDictionary Source="Source/UI/Controls/SliderCard.xaml" />
                <ResourceDictionary Source="Source/UI/Controls/SwitchCard.xaml" />
                <ResourceDictionary Source="Source/UI/Controls/SettingsCard.xaml" />
                <ResourceDictionary Source="Source/UI/Controls/ExpandableSettingsControl.xaml" />
                <ResourceDictionary Source="Source/UI/Controls/ColorPickerControl.xaml" />

            </ResourceDictionary.MergedDictionaries>
            <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
